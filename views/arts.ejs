<%- include("partial/header") -%>
    <div class="header">
        <h1>Arts</h1>
        <p>Some Quotation</p>
    </div>
    <div class="newItems">
        <div class="compose">
            <button type="submit" class="button"><a href="/composeArts" style="color:white;"> Compose New</a></button>
        </div>
        <% if (Array.isArray(postArts)) {%>
            <% postArts.forEach(function(post){ %>
                <% if(post.postTitle.length>=3 && post.postDetails.length>=3  && post.postEligibility.length>=3  && post.postAdmission.length>=3 && post.postScope.length>=3  && post.postJob.length>=3){ %>
                <a href="/postArts/<%=post._id%>">
                    <h1>
                        <%=post.postTitle %>
                    </h1>
                </a>
                <h3>
                    Detailâ€™s:
                </h3>
                <p>
                    <%if(post.postDetails.length >=200){%>
                        <%=post.postDetails.substring(0,200) %>
                        <a href="/postArts/<%=post._id%>">Read More...</a>
                        <% }else{%>
                        <%=post.postDetails %>
                        <% }%>
                    
                </p>
                <h3>
                    Eligibility:
                </h3>
                <p>
                    <%if(post.postEligibility.length >=200){%>
                        <%=post.postEligibility.substring(0,200) %>
                        <a href="/postArts/<%=post._id%>">Read More...</a>
                        <% }else{%>
                        <%=post.postEligibility %>
                        <% }%>
                </p>
                <h3>
                    Admission:
                </h3>
                <p>
                    <%=post.postAdmission.substring(0,200) %> ...
                </p>
                <h3>
                    Scope:
                </h3>
                <p>
                    <%=post.postScope.substring(0,200) %> ...
                </p>
                <h3>
                    Job:
                </h3>
                <p class="last">
                    <%=post.postJob.substring(0,200) %>
                        <a href="/postArts/<%=post._id%>">Read More...</a>
                </p>

                <% }%>
                

                <%});}  %>

    </div>
    <%- include("partial/footer") -%>